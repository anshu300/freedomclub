<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


<div class="container">
    <div class="row">
       <div class="col-md-4"></div>
       <div class="col-md-4" style="padding-top: 5%">
            <input type="text" class="from-control" id="num">
            <button class="btn btn-primary">Sumbit</button>
       </div>
       
    </div>
</div>

<div class="container main" style="display: none;">
        <h2 style="text-align: center; ">Geeting User Information</h2>
        <div class="contact-inner ">
    <div class="row ">
       
        <div class="col-md-6 ">
         <label>Name</label>   
         <label>Email</label>  
         <label>Mobile</label> 
         <label>Id</label>  
         <label>walletId</label>
         <label>Balance</label>
        </div>
        <div class="col-md-6" id="info">
            
        </div>
        </div>
    </div>
</div>


<script type="text/javascript">
$('.btn-primary').on("click",function(){
     $('#info').html(" ");
      var num=$('#num').val();
      $(this).html("Loading..");
    $.post("/api/profile",{"number":num},function(d){
        console.log(d);
         $('.btn-primary').html("Submit");
        $('.main').css("display","block");
        $('<div class="formvalue">'+d.userInfo.name +
        '</div>'+'<div class="formvalue">'+d.userInfo.emailId +'</div>'+
        '</div>'+'<div class="formvalue">'+d.userInfo.mobileNo +'</div>'+
        '</div>'+'<div class="formvalue">'+d.userInfo.id +'</div>'+
        '</div>'+'<div class="formvalue">'+d.userInfo.walletId +'</div>'+
        '</div>'+'<div class="formvalue">'+d.userInfo.balance +'</div>').appendTo('#info')
    });
});
</script>

