                        <strong>Money in your Freedom Account</strong>
                        <br>Rs.
                        <span class="rest-amount">
                            <% if(totalamu>0){ %>
                            <%= totalamu %>
                            <% } else{ %>
                             0
                            <% } %>
                        </span>
                    </div>
                </div>
